// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  avatar    String?
  password  String?
  provider  String     @default("form")
  playlists Playlist[]
}

model Playlist {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  userId      Int
  author      User    @relation(fields: [userId], references: [id])
  songs       Song[]
}

model Song {
  id         Int      @id @default(autoincrement())
  title      String
  artist     String
  url        String
  duration   Int
  playlist   Playlist @relation(fields: [playlistId], references: [id])
  playlistId Int
  test       String?
}
